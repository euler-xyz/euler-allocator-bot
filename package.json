{
    "name": "ts-processor-app",
    "version": "1.0.0",
    "description": "TypeScript processor application",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc && tsc-alias",
        "start": "node -r tsconfig-paths/register dist/index.js",
        "dev": "tsx src/index.ts",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\" \"test/**/*.{ts,tsx,js,jsx,json}\"",
        "test": "jest --coverage",
        "docker:clean": "docker compose down -v",
        "docker:build": "docker compose build --no-cache",
        "docker:up": "docker compose up",
        "docker:fresh": "pnpm docker:clean && pnpm docker:build && pnpm docker:up",
        "doppler:login": "./scripts/dopplerLogin.sh",
        "doppler:syncdev": "TOKEN=dev ./scripts/dopplerSync.sh",
        "doppler:syncstg": "TOKEN=stg ./scripts/dopplerSync.sh",
        "doppler:syncprd": "TOKEN=prd ./scripts/dopplerSync.sh"
    },
    "dependencies": {
        "abitype": "^1.0.9",
        "dotenv": "^16.4.7",
        "pino": "^9.9.0",
        "pino-pretty": "^13.1.1",
        "viem": "^2.22.17",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.0",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "prettier-plugin-organize-imports": "^3.2.4",
        "ts-jest": "^29.1.2",
        "tsc-alias": "^1.8.10",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    }
}
